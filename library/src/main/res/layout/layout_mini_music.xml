<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/music_layout_height"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/iv_music_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#e0e0e0"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/music_icon" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6" >

        <TextView
            android:id="@+id/tv_music_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/music_layout_title_marginTop"
            android:layout_marginLeft="@dimen/music_layout_title_marginLeft"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/default_music_name" />

        <SeekBar
            android:id="@+id/sb_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/music_layout_seek_bar_marginBottom"
            android:layout_alignParentBottom="true"
            android:focusable="false"
            android:maxHeight="@dimen/music_layout_seek_bar_maxHeight"
            android:minHeight="@dimen/music_layout_seek_bar_minHeight"
            android:progressDrawable="@drawable/progress_style"
            android:thumb="@null" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_control_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:src="@drawable/pause_mini_music" />

</LinearLayout>
